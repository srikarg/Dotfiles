#!/usr/bin/env bash

# This uses the `sesh` binary found here: https://github.com/joshmedeski/sesh#tmux--fzf

session=$(sesh list --icons --tmux --zoxide --hide-attached --hide-duplicates | fzf-tmux -p 90%,90% -- \
  --ansi \
  --no-sort --border-label ' sesh ' --prompt 'âš¡ ' \
  --preview 'sesh preview {}' \
  --pointer 'ğŸ‘‰ğŸ¼' \
  --no-scrollbar \
  --layout reverse --info hidden \
  --header '^a all ^t tmux ^x zoxide ^d tmux kill ^f find' \
  --bind 'tab:down,btab:up' \
  --bind 'ctrl-a:change-prompt(âš¡ )+reload(sesh list --icons --hide-duplicates)' \
  --bind 'ctrl-t:change-prompt(ğŸªŸ )+reload(sesh list -t --hide-attached --icons --hide-duplicates)' \
  --bind 'ctrl-x:change-prompt(ğŸ“ )+reload(sesh list -z --icons --hide-duplicates)' \
  --bind 'ctrl-f:change-prompt(ğŸ” )+reload(fd -H -d 3 -t d -E .Trash . ~)' \
  --bind 'ctrl-d:execute(tmux kill-session -t {2..})+change-prompt(âš¡  )+reload(sesh list --icons --hide-duplicates)')

sesh connect "$session"
